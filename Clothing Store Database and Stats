--Display the database ordered by price.
SELECT *FROM tops ORDER BY price asc;

--How many total tops are in the store's inventory?
SELECT SUM(QUANTITY) FROM TOPS;

--Which tops have 7 or more quantities available in inventory?
SELECT * FROM TOPS WHERE QUANTITY >= 7 ORDER BY QUANTITY ASC;

--What types of tops and colors are available in the store's inventory?
SELECT NAME, COLOR FROM TOPS;








